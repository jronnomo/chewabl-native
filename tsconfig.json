{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react", // Add this line to enable JSX support
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx", // Add this line to include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
